.home{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  align-items: center;
}

page {
  background: #f0f0f0;
}

.bottom{
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #f0f0f0;
  padding-top: 3%;
  padding-bottom: 5%;
  bottom: 0%;
}

.poster{
  display: flex;
  width: 100%;
  height: auto;
}

.textBottom1{
  display: flex;
  align-items: center;
  font-size: 150rpx;
  writing-mode: horizontal-tb;
  padding-left: 9%;
  font-weight: 375;
  text-shadow: 3px 0px 5px #333333;
  color: #1b1464;
}

.textBottom2{
  display: flex;
  justify-content: left;
  align-items: center;
  font-size: 100rpx;
  padding-left: 9%;
  font-weight: 250;
  text-shadow: 2px 0px 2px #1b1450;
  color: #1b1464;
}

.button{
  position: fixed;
  flex-direction: column;
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  bottom: 75rpx;
  right: 50rpx;
  background: rgb(150, 150, 150);
  z-index: 2;
}

.buttonImg{
  position: relative;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.btnImg{
  margin-top: auto;
  margin-bottom: auto;
  margin-left: 15rpx;
  width: 60%;
}

.btnImage {
  position: absolute;
  z-index: 3;
  width: 180rpx;
}